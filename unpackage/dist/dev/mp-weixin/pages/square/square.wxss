.swiper-box {
  height: 140px;
  width: 100%;
}
.swiper-box .swiper-item {
  width: 100%;
  height: 100%;
}
.swiper-box .swiper-item image {
  width: 100%;
}
.navigation-box {
  height: 60px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #D3D3D3;
}
.navigation-box .thumb-box {
  width: 60px;
}
.navigation-box .thumb-box image {
  width: 70%;
  height: 70%;
  border-radius: 60px;
  margin-top: 8px;
  margin-left: 8px;
}
.navigation-box .tab-container {
  display: flex;
  width: 240px;
  justify-content: space-around;
  align-items: center;
}
.navigation-box .tab-container .tab-box {
  border: 1px solid #5dbec7;
  border-radius: 15px;
}
.navigation-box .tab-container .tab-box text {
  color: #5dbec7;
  padding: 0 5px;
}
.navigation-box .search-box {
  width: 60px;
}
.navigation-box .search-box image {
  width: 30px;
  height: 30px;
  margin-top: 12px;
  margin-left: 8px;
}
.title-box {
  height: 40px;
  text-align: center;
  align-items: center;
  border: 1px solid #5dbec7;
}
.title-box text {
  line-height: 40px;
  font-size: 14px;
}
.content-container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  padding: 0 5px;
}
.content-container .uni-card {
  height: 170px;
  width: 130px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-container .uni-card .card-actions {
  line-height: 40px;
  display: flex;
  justify-content: space-around;
  margin-top: -15px;
}
.content-container .uni-card image {
  height: 150px;
  width: 150px;
}
.upLoad-box {
  position: -webkit-sticky;
  position: sticky;
  bottom: 0;
  z-index: 999;
  height: 28px;
  display: flex;
  justify-content: center;
}
.upLoad-box .upLoad-text {
  height: 28px;
  width: 50px;
  background-color: #5dbec7;
  display: flex;
  text-align: center;
  justify-content: center;
  border-radius: 80px 80px 0 0;
}
.upLoad-box .upLoad-text text {
  line-height: 28px;
  color: #FFFFFF;
  font-size: 30px;
  font-weight: lighter;
}


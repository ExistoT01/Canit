.nav-bar-container {
  margin-top: 10px;
  height: 60px;
  display: flex;
  justify-content: space-around;
}
.nav-bar-container .nav-bar-items-box .nav-bar-items-imgbox {
  height: 40px;
  width: 40px;
}
.nav-bar-container .nav-bar-items-box .nav-bar-items-imgbox image {
  height: 100%;
  width: 100%;
}
.nav-bar-container .nav-bar-items-box .nav-bar-items-textbox {
  margin-top: 5px;
  height: 20px;
  width: 40px;
  text-align: center;
  border: 1px solid #23909b;
  border-radius: 20px;
}
.nav-bar-container .nav-bar-items-box .nav-bar-items-textbox text {
  line-height: 20px;
  font-size: 12px;
  color: #23909b;
}
.answer-list-container {
  background-color: #d7f3f6;
  margin-top: 20px;
}
.answer-list-container .answer-box {
  -webkit-transform: translateY(15px);
          transform: translateY(15px);
  background-color: #FFFFFF;
  height: 60px;
  margin-top: 15px;
}
.answer-list-container .answer-box .answer-title {
  margin: 0 12px 0 12px;
  font-size: 16px;
  color: #808080;
  border-bottom: 1px solid #808080;
}
.answer-list-container .answer-box .answer-button-container {
  display: flex;
  justify-content: flex-end;
}
.answer-list-container .answer-box .answer-button-container .answer-button-box {
  width: 60px;
  margin-right: 20px;
  margin-top: 5px;
  color: #FFFFFF;
  background-color: #25919b;
  border-radius: 20px;
  text-align: center;
}


.navigation-box {
  height: 120px;
  background-color: #25919b;
  border-radius: 15px 15px 0 0;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.navigation-box .navigation-tab {
  width: 80px;
  margin-bottom: 10px;
}
.navigation-box .navigation-tab .img-box {
  display: flex;
  justify-content: center;
}
.navigation-box .navigation-tab .img-box image {
  height: 50px;
  width: 50px;
}
.navigation-box .navigation-tab .text-box {
  text-align: center;
  line-height: 20px;
  display: flex;
  justify-content: center;
  color: #FFFFFF;
  font-weight: bold;
}
.navigation-box::after {
  content: '  ';
  display: block;
  width: 100%;
  height: 40px;
  background-color: #FFFFFF;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 15px 15px 0 0;
  -webkit-transform: translateY(50%);
          transform: translateY(50%);
}
.list-box {
  background-color: #FFFFFF;
  border-radius: 15px 15px 0 0;
}
.list-box .list-item {
  margin-bottom: 10px;
  background-color: #d7f3f6;
  display: flex;
  justify-content: space-around;
}
.list-box .list-item .list-item-left-box {
  width: 200px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #25919b;
  margin: 10px 0;
  border-bottom: 1px dashed #25919b;
}
.list-box .list-item .list-item-left-box .list-item-left-box-coalAndCalorie {
  display: flex;
  margin-bottom: 5px;
}
.list-box .list-item .list-item-right-box {
  display: flex;
  align-items: center;
}
.list-box .list-item .list-item-right-box image {
  height: 60px;
  width: 85px;
}

